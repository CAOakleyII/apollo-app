{
    "name": "apollo",
    "version": "0.2.1",
    "description": "Spotify Overlay",
    "author": "Chris Oakley <caoakleyii@gmail.com>",
    "main": "app.js",
    "scripts": {
        "dev": "webpack-dev-server --config webpack.dev.config.js",
        "build": "webpack",
        "start": "electron .",
        "pack": "webpack && electron-builder --dir",
        "dist": "webpack && electron-builder",
        "release":  "webpack && build"
    },
    "build": {
        "appId": "com.electron.Apollo",
        "productName": "Apollo",
        "copyright": "Copyright Â© 2018 Christopher Oakley",
        "directories": {
            "output": "dist"
        },
        "publish": [
            {
                "provider": "generic",
                "url": "http://updater.apolloverlay.com/download"
            },
            {
                "provider": "github"
            }
        ],
        "mac": {
            "target": "dmg"
        },
        "win": {
            "publish": [
                {
                    "provider": "generic",
                    "url": "http://updater.apolloverlay.com/download"
                },
                {
                    "provider": "github"
                }
            ],
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }                
            ]
        },
        "linux": {
            "target": [
                {
                    "target": "deb"
                },
                {
                    "target": "apk"
                },
                {
                    "target": "tar.gz"
                }
            ]
        }
    },
    "devDependencies": {
        "babel-core": "^6.22.1",
        "babel-eslint": "^7.1.1",
        "babel-loader": "^7.1.1",
        "babel-plugin-transform-runtime": "^6.22.0",
        "babel-preset-env": "^1.3.2",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.22.0",
        "babel-preset-vue": "^2.0.1",
        "babel-register": "^6.22.0",
        "css-loader": "^0.28.0",
        "electron": "1.7.12",
        "electron-builder": "^19.56.0",
        "less": "^2.7.3",
        "less-loader": "^4.0.5",
        "path": "^0.12.7",
        "vue-loader": "^13.0.4",
        "vue-router": "^2.7.0",
        "vue-style-loader": "^3.0.1",
        "vue-template-compiler": "^2.4.2",
        "webpack": "^2.6.1",
        "webpack-dev-middleware": "^1.10.0",
        "webpack-dev-server": "^2.11.1",
        "webpack-hot-middleware": "^2.18.0",
        "webpack-merge": "^4.1.0"
    },
    "dependencies": {
        "electron-is-dev": "^0.3.0",
        "electron-titlebar": "0.0.3",
        "electron-titlebar-windows": "^3.0.0",
        "electron-updater": "^2.20.1",
        "firebase": "^4.9.1",
        "spotify-web-api-node": "^2.5.0",
        "vue": "^2.5.13",
        "vue-electron": "^1.0.6",
        "vue-resource": "^1.3.5"
    }
}
